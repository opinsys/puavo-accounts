description "puavo-accounts"

start on runlevel [23]
stop on shutdown

pre-start script
    mkdir -p /run/puavo-accounts
    chown puavo:puavo /run/puavo-accounts
end script

chdir /var/app/puavo-accounts
env RACK_ENV=production

exec sudo -E -u puavo bundle exec puma --workers 4 --port 9494

respawn
